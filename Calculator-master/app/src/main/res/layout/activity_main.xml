<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.guylaf.calculator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/result_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@android:color/black"
            android:gravity="center_vertical|end"
            android:textColor="@android:color/white"
            android:textSize="20pt" />

        <Button
            android:id="@+id/Btnclear_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="btnclearClicked"
            android:text="C"
            android:textSize="20pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn7Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn7Clicked"
                android:text="7"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn4Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn4Clicked"
                android:text="4"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn1Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn1Clicked"
                android:text="1"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn0Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn0Clicked"
                android:text="0"
                android:textSize="20pt" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn8Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn8Clicked"
                android:text="8"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn5Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn5Clicked"
                android:text="5"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn2Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn2Clicked"
                android:text="2"
                android:textSize="20pt" />

            <Button
                android:id="@+id/Btncomma_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btncommaClicked"
                android:text="."
                android:textSize="20pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn9Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn9Clicked"
                android:text="9"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn6Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn6Clicked"
                android:text="6"
                android:textSize="20pt" />

            <Button
                android:id="@+id/btn3Clicked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btn3Clicked"
                android:text="3"
                android:textSize="20pt" />

            <Button
                android:id="@+id/Btnequal_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btnequalClicked"
                android:text="="
                android:textSize="20pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/Btndivide_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btndivideClicked"
                android:text="/"
                android:textSize="20pt" />

            <Button
                android:id="@+id/Btnmulti_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btnmultiClicked"
                android:text="X"
                android:textSize="20pt" />

            <Button
                android:id="@+id/Btnminus_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btnminusClicked"
                android:text="-"
                android:textSize="20pt" />

            <Button
                android:id="@+id/Btnplus_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="btnplusClicked"
                android:text="+"
                android:textSize="20pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
